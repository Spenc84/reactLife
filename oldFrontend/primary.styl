// The primary editing window for new and existing tasks
div.edit-item-pane.container, div.new-item-pane.container
  top 0
  left 0
  z-index 500
  background-color $light
  div.edit-item-pane.header, div.new-item-pane.header
    div.title.row
      div.title.column
        font-size 26px
        div
          display flex
        &:last-child
          button
            background none
            color $light
            border 1px solid transparent
            border-radius 4px
            &:disabled
              color lightish(0.3)
  div.edit-item-pane.body, div.new-item-pane.body
    z-index 100
    position absolute
    width 100vw
    top 4em
    bottom 0
    padding 1.5em
    box-sizing border-box
    background-color $light
    form
      div.form.row
        display flex
        margin-bottom 10px
        span.label
          font-size 1.5em
        input[type=text]
          flex-grow 1
          margin 0 1em
          border none
          font-size: 20px
          &:focus
            outline none
        input[type=color]
          margin-left 10px
          align-self center
        textarea
          width 100%
          height 50px
          border none
        &.togglable
          flex-direction column
          div.title.row
            display flex
            justify-content space-between
            span
              display flex
              align-items center
            button
              background none
              color $selected
              border 1px solid transparent
          div.toggleBox
            display flex
            padding 5px 10px
            background-color rgba(200,200,200,0.1)
            box-shadow inset 2px 3px rgba(0,0,0,.3), inset -1px -1px 15px rgba(0,0,0,.2), inset -2px -1px rgba(0,0,0,.1)
            div.row
              display flex
            div.col
              display flex
              flex-direction column
            &.availability
              position relative
              flex-direction column
              span
                cursor pointer
              div.ghost
                position absolute
                top 0
                bottom 0
                left 0
                right 0
              .locked
                opacity .2
              div.r1c1
                display flex
                width 20%
                justify-content center
                font-weight bold
                font-size 1.2em
                span
                  text-align center
              div.r1c2
                flex-grow 1
                div.r1c2r1
                  flex-grow 1
                  &.spacer
                    margin-left 15%
                  span
                    width (100%/7)
                    text-align center
              div.r2c1
                width 5%
                justify-content space-around
                span
                  font-weight bold
                  line-height .85em
                  font-family monospace
                  &:first-child
                    margin-top 10em
              div.r2c2
                width 15%
                span
                  height 19px
                  text-align right
              div.r2c3
                flex-grow 1
                div.r2c3r1
                  flex-grow 1
                  div.col
                    width (100%/7)
                    div.row
                      justify-content center

            div.column
              display flex
              flex-direction column
              &:first-child
                font-weight bold
                margin-right 15px

