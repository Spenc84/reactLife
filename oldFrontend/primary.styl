//spacers for calHeader
div.spacer1
  height 70px
  width 100vw
div.spacer2
  height 230px
  width 100vw
div.weekViewSpacer
  height 60px
  width 100vw

//Grey Overlay
fade
  position fixed
  top 0
  bottom 0
  left 0
  right 0
  z-index 20
  background-color darkish(0.3)
.noScroll
  overflow hidden

// optionPane Directive
div.optionPane
  //container
  position absolute
  display inline-flex
  width 100vw
  left 0
  min-height 100%
  align-items: center;
  //active area
  & > .col
    background-color white
    width 320px
    box-shadow 1px 0 10px #515151
    z-index 30
    .row
      center(vert, h)
      &:first-child
        background-color newLeaf(0.2)
        border-bottom 1px solid #333
        img
          padding 5px
          height 56px
      &:nth-child(2) .col
        center(vert)
        padding 1em .5em .5em .5em
        img
          height 3em
          padding 0 .5em
        span
          font-size 24px
          margin-right 10px
      &:nth-child(3)
        div.col
          display block
          div
            center(vert)
            padding 10px
            span
              font-size 18px
              margin-left 1em
              margin-right 5em

// Calendar Directive
calendar.header
  position fixed
  width 100%
  z-index 15
  top 70px
  background-color $light
div.calendar
  box-shadow $shadow
  div.row
    center(vert, h)
    padding 8px 0
    &:nth-child(2)
      color $inactive
      text-align center
    & > div.col7
      center(h)
      flex-direction column
      align-items center
      div
        center(vert, h)
        width 25px
        &.cal
          height 25px
    .hide
      visibility hidden
    .disabled
      opacity .3
    .selected, .today
      border-radius 50%
      box-sizing border-box
      font-size 90%
    .today
      background-color rgba(0, 120, 255, 0.3)
      color $light
    .selected
      background-color $selected
      color $light

div.calendarHead
  box-shadow $shadow
  center(vert)
  justify-content space-between
  background-color $primary2
  b
    font-size 24px
section.calendar
  position fixed
  height 100vh
  left 0
  right 0
  z-index -1
  opacity .3



//********************  LIST  ********************
//----------------VIEWS---------------
// General
div.list.view
  div.view.body
    position fixed
    z-index 1
    top 6.1em
    bottom 0
    overflow scroll
    width 100vw
  div.tab
    position fixed
    top 3.8em
    height 2.2em
    center(vert, h)
    border 1px solid inactive(.8)
    border-bottom none
    background-color $light
    color lightish(.9)
    font-weight bold
    text-shadow 1px 1px 20px selected(.3), -1px -1px 20px selected(.3), -1px 1px 20px selected(.3), 1px -1px 20px selected(.3), 1px 2px 1px black, -1px -.5px 1px black, -1px 2px 1px black, 1px -.5px 1px black
    z-index 100
div.list.spacer
  height 6em
div.item.row
  height 3em
  display flex
  div.item.col:first-child
    width 12vw
    height 100%
    display flex
    center(vert, h)
    svg
      stroke darkish(.53)
      stroke-width 1.5px


// star
div.list.star.view
  div.star.tab
    width 10vw*1.1
    border-left none
    i
      font-size 27px
      color $star
      text-shadow 1px 1px 20px selected(.3), -1px -1px 20px selected(.3), -1px 1px 20px selected(.3), 1px -1px 20px selected(.3), 1px 2px 1px black, -1px -.5px 1px black, -1px 2px 1px black, 1px -.5px 1px black

// active
div.list.active.view
  div.active.tab
    width 19vw*1.1
    left 10.3vw

// pending
div.list.pending.view
  div.pending.tab
    width 22vw*1.1
    left 29.3vw

// inactive
div.list.inactive.view
  div.inactive.tab
    width 22vw*1.1
    left 51.3vw

// completed
div.list.completed.view
  div.completed.tab
    width 27vw
    left 73.3vw

// search
div.list.search.view
  div.search.icon
    position fixed
    width 2em
    right .6em
    height 4em
    display flex
    z-index 150
    i
      font-size 2em
      color $sky
      text-shadow 0 3px 6px rgb(0,0,255)
      margin auto
      background-color $selected
  div.search.box
    position fixed
    width 100vw
    top 6em
    padding .3em 0
    background-color $light
    border 1px solid $dark
    box-sizing border-box
    box-shadow $shadow
    div.row
      display flex
      //1ST ROW (w/ all the search filters)
      div.col2
        color darkish(0.4)
        .selected
          color darkish(0.8)
          text-shadow 0 3px 6px rgba(0,64,128,1)
        //1ROW/1ST COLUMN (icons)
        &:first-child
          width 15vw
          flex-grow 0
          center(h)
          flex-direction column
          font-weight bold
          text-align center
          i:active
            color darkish(0.8)
            text-shadow 0 3px 6px rgba(0,64,128,1)
        //1ROW/2ND COLUMN (filter terms)
        &:last-child
          flex-grow 1
          display flex
          justify-content space-around
          div.icol3
            display flex
            flex 0 1 auto
            flex-direction column
            align-items center
            &:first-child
              width 32%
            div.irow3
              margin .4em
      //2ND ROW (w/ with the search input box)
      input
        font-size 1em
        margin .5em 1em
        flex-grow 1



