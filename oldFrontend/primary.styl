//********************  GLOBAL STYLING  ********************
//COLORS
$newLeaf = newLeaf()
newLeaf(alpha = 1)
  rgba(0,128,0, alpha)
$selected = selected()
selected(alpha = 1)
  rgba(0, 120, 255, alpha)
$inactive = inactive()
inactive(alpha = 0.5)
  rgba(0, 0, 0, alpha)
$dark = darkish()
darkish(alpha = 0.5)
  rgba(0, 0, 0, alpha)
$light = lightish()
lightish(alpha = 1)
  rgba(255, 255, 255, alpha)
$shadow = 0 1px 10px #515151
$star = rgb(241, 196, 15)
$sky = rgb(102,204,255)
$burntOrange = rgb(249, 131, 5)
$primary2 = red

//POSITIONING
center(n, n1 = false)
  if n1
    display flex
    align-items center
    justify-content space-around
  else if n == vert
    display flex
    align-items center
  else if n == h
    display flex
    justify-content space-around

//NG-CLOAK
[ng\:cloak], [ng-cloak], [data-ng-cloak], [x-ng-cloak], .ng-cloak, .x-ng-cloak {
  display: none !important;
}

//RESET
html, body
  margin 0
  padding 0


  // Prevent's scrolling during overlays
.container
  width 100vw
  height 100vh
  position fixed
  overflow-x hidden
  overflow-y auto
  flex-wrap wrap


//***************  CALENDAR STYLING  ***************
// ----------------VIEWS---------------
div.calendar.view.container, div.week.container, div.day.container, div.agenda.container
  height calc(100vh - 70px)
  top 70px

// Agenda
div.agenda.container
  div.task.item
    margin 5px
    border-radius 5px
    padding 6px
    box-sizing border-box
    min-height 50px
  div.date.item
    margin 15px 5px
// Month
div.calendar.view.container
  box-shadow none
  z-index 0
  .row
    padding 0
    &:first-child
      color $inactive
      margin 5px
    &:nth-child(2)
      flex-grow 1
      color black
    span
      min-height 1em

// Week
div.week.container
  #date
    z-index 10
    left 50px
    right 0
    div.col7
      text-align center
      &>div:first-child
        font-size 10px
  div.dividers.column
    position absolute
    padding-top 5px
    hr
      margin 0
      border none
      margin-bottom 29px
      border-bottom 1px solid darkish(0.3)
      width 100vw
      &:nth-child(even)
        border-bottom 1px dashed darkish(0.3)
  div.event.column
    padding-top 5px
    svg
      margin-left -7px
    div.week.calendarItem
      position absolute
      left 0
      right 0
      margin-top -5px
      background-color lightblue
      overflow scroll
      font-size small
      padding 1px
      box-sizing border-box
      border 1px solid darkish(.3)
    div.col7
      position relative
      display inline-flex
      height 1440px
      box-sizing border-box
      border-left 1px solid darkish(.3)

// Day
div.day.container
  #date
    left 0
    width 50px
    flex-direction column
    background-color $light
    box-shadow 0 5px 15px $light
    &>div:first-child
      font-size 10px
  div.event.column
    svg
      margin-left -7px
    div.day.calendarItem
      position absolute
      padding 5px 10px
      background-color lightblue
      border 1px solid darkish(.3)
    hr
      margin 0
      margin-top 3px
      border-color darkish(0.3)
    & > div
      height 60px
      width 100%
      box-sizing border-box
      border-bottom 1px solid darkish(0.3)
      div
        height 30px
        width 100%
        box-sizing border-box
        border-bottom 1px dashed darkish(0.3)

//Week & Day
div.day.container, div.week.container
  display flex
  #date
    position fixed
    top 70px
    height 60px
    font-size 24px
    center(vert)
    justify-content center
    &.spacer
      top 300px
  .today
    color rgba(0, 120, 255, 0.5)
  .inactive
    color $inactive
  .selected
    color $selected
    font-size 110%
  div.hour.column
    width 50px
    font-size 12px
    text-align center
    flex-grow 0
    div
      height 60px
  div.event.column
    position relative
    flex-grow 1
    svg
      position absolute
      fill $selected
      stroke $selected
      z-index 50


