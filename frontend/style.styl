// RESET
html, body
    margin 0
    padding 0

// COLORS
$background1 = rgb(255,255,255);

// GLOBALS
.app.container *
    display flex
    box-sizing border-box

// STYLES
.faded
    opacity .5

// COMPONENTS
.column
    flex-direction column
    flex-grow 1
.row
    flex-grow 1
i
    align-items center
.header
    position fixed
    top 0
    left 0
    right 0
    height 6rem
    background-color $background1
