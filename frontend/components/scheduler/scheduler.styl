$primary = rgb(0, 120, 255)
$lightText = rgb(255,255,255)
$light = rgb(245,245,245)
$shadow = 0 .1rem 1rem #515151


main.Scheduler
    flex-direction: column;

    .scheduler_header
        background $primary
        justify-content space-between

    .scheduler_body
        flex-direction column
        width 35rem
        max-width 100%

        div.ExpansionPanel
            & > div.body
                padding 0

                & > div.options
                    margin: 1rem;
                    background: rgba(200,200,200,0.15);
                    box-shadow: inset 0 1px 3px rgba(34,34,34,0.6);
                    flex-wrap: wrap;
                    padding: 1rem 0 0 1rem;

                    div.option
                        position: relative;
                        margin: 0 1rem 1rem 0;
                        justify-content: center;
                        align-items: center;

                        &::before
                            content: attr(data-content);
                            padding: 1rem;

                        div
                            position: absolute;
                            padding: 1rem;
                            background: rgb(250,250,250);
                            box-shadow: 0px 1px 3px rgba(34,34,34,.5);
                            border-radius: 5px;
                            cursor: pointer;
                            white-space: nowrap;
                            &:hover, &.focus { background-color: #EDF7FF; }
                            &:active {
                                background-color: #EDF7FF * .98;
                                font-size 1.5rem
                                box-shadow: 0px 0px 3px rgba(34,34,34,.5);
                            }

            &:last-of-type
                border-bottom-left-radius .3rem
                border-bottom-right-radius .3rem



