@require '../../index'

div.Filter
    flex-direction column

    div.search.row
        flex 0 0 4.8rem
        height 4.8rem
        align-items center
        padding-right 1rem

        div.count
            flex 0 0 4.8rem
            width 4.8rem
            justify-content center

            span
                min-width 2.4rem
                height 2.4rem
                align-items center
                justify-content center
                border-radius .5rem
                padding 0 .5rem
                border .2rem inset
                color $darkTextSecondary

        .Text
            background $lightBackground
            flex 1 0 0px

        div.Icon
            margin-left 1rem

    div.query
        flex-direction column
        .tags
            .not
                flex 0 0 4.8rem
                justify-content center
                align-items center
                cursor pointer
                &.active
                    color red
            .options
                flex-wrap wrap
                padding-right 1rem
                .tag
                    cursor pointer
                    padding .5rem

        .status
            flex-direction column
            padding 1rem

            .tag
                cursor pointer
                &.excluded
                    color red
                    &::before
                        content 'not'
                        padding-right .35rem

            .row > .column
                background rgba(0,0,0,.1)
                margin .5rem
                padding .5rem

            .column > div.Icon:hover, .column > div.Icon.active, .row > div.Icon:hover, .row > div.Icon.active
                i
                    opacity 0
                &::before
                    position absolute
            .column > div.Icon:hover::before, .column > div.Icon.active::before
                content 'or'
            .row > div.Icon:hover::before, .row > div.Icon.active::before
                content 'and'


        .row, .column
            align-items center


@media screen and (max-width: 1000px)
    div.Filter div.query
        .context
            display none
        .status .tag.excluded::before
            content none
