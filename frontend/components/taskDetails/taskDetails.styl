@require '../../index'

main.TaskDetails
    z-index 50
    position fixed
    top 0
    right 0
    bottom 0
    left 0
    flex-direction column
    background $primaryBG
    font-family 'Roboto medium', 'Roboto', sans-serif

    header.task_details
        height 7rem
        background-color $listAccent
        color $light

        div.Icon
            flex 0 0 4.8rem
            align-items center
            justify-content center

        .completed
            color $completed
        .starred
            color $star

        & > .functional.icons
            flex 1 0 0rem
            justify-content center

        & > div.Button
            align-self center
            margin-right .8rem

    & > div.body
        flex-direction column

        div.row
            min-height 6rem
            padding 1.8rem

            & > span.label
                font-size 1.8rem
                padding-right 1.8rem
                width 12rem
                height 2.8rem
                justify-content flex-end
                align-items center

            input[type='text']
                flex-grow 1
                font-size 1.6rem
                padding 0.5rem 1rem

            input[type='color']
                height 3rem
                width 6rem
                background whitesmoke
                cursor pointer
                &:disabled
                    border none
                    background none
                    cursor default

            input:not([disabled])
                border .1rem solid $borderColor
                border-radius .3rem
                transition border-color 400ms, box-shadow 400ms
                &:hover, &:focus
                    border-color $hoverBorder
                    transition border-color 900ms 100ms, box-shadow 400ms

            div.TextArea
                font-size 1.4rem
                flex-grow 1
            textarea
                flex-grow 1
                font-size 1.4rem
                font-family 'Roboto medium', 'Roboto', sans-serif

            &.schedule
                flex-direction column

                & > span.label
                    padding-bottom .5rem

                div.ExpansionPanel::after
                    content none
