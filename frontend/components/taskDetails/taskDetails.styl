$primaryBG = rgb(255,255,255)
$listAccent = rgb(0, 120, 255)
$light = rgb(245,245,245)
$borderColor = rgba(0,0,0,.12)
$hoverBorder = rgba(0, 120, 255, .75)

main.TaskDetails
    z-index 50
    position fixed
    top 0
    right 0
    bottom 0
    left 0
    flex-direction column
    background $primaryBG
    font-family 'Roboto medium', 'Roboto', sans-serif

    header.task_details
        height 7rem
        background-color $listAccent
        color $light

        & > span
            flex-grow 1
            align-items center
            margin 0 .8rem 0 2.4rem
            font-size 2.6rem

        & > div.Icon
            flex 0 0 4.8rem
            align-items center
            justify-content center

        & > div.Button
            align-self center
            margin-right .8rem

    & > div.body
        flex-direction column

        div.row
            min-height 6rem
            align-items center
            padding 0 1.8rem

            span.label
                font-size 1.8rem
                padding-right 1.8rem

            input
                flex-grow 1
                font-size 1.6rem
                padding 0.5rem 1rem
                border 1px solid $borderColor
                border-radius .3rem
                transition border-color 400ms, box-shadow 400ms
                &:hover, &:focus
                    border-color $hoverBorder
                    transition border-color 900ms 100ms, box-shadow 400ms

            textarea
                flex-grow 1
                font-size 1.6rem
                font-family 'Roboto medium', 'Roboto', sans-serif

            &.description
                flex-direction column
                align-items stretch
