$shadow = 0 2px 2px 0 rgba(0, 0, 0, 0.1), 0 3px 1px -2px rgba(0, 0, 0, 0.1), 0 1px 5px 1px rgba(0, 0, 0, 0.09)
$lightBackground = white

.ExpansionPanel
    flex: 0 0 auto;
    display: flex;
    position: relative;
    flex-direction: column;
    background $lightBackground
    font-family: 'Roboto Regular', 'Roboto', sans-serif;

    &::after
        content: ' ';
        position: absolute;
        top: 0;
        bottom: 0;
        left: 0;
        right: 0;
        z-index: -1;
        box-shadow: $shadow;

    & > div.header
        flex: 0 0 4.8rem;
        display: flex;
        align-items: center;
        padding: 0 2.4rem;
        border-top: .1rem solid rgba(0,0,0,.12);
        cursor: pointer;

        &:hover, &.focus { background-color: #EDF7FF; }

        div.label
            flex: 0 0 6.6rem;
            display: flex;
            align-items: center;
            font-size: 1.6rem;
            color: rgba(0,0,0,.87);

        div.value
            flex: 1;
            display: flex;
            flex-direction: column;
            color: rgba(0,0,0,.54);
            margin: 0 1.6rem;

        .icon { color: rgba(0,0,0,.38); }

    & > div.body
        flex: 0 0 auto;
        padding: 1.2rem;

    & > div.footer
        flex: 0 0 4.8rem;
        height: 4.8rem;
        display: flex;
        justify-content: flex-end;
        align-items: center;

        & > a.flat-button, & > a.colored-flat-button
            margin-right: .8rem;
            padding: 0;
            height: 3.6rem;
            width: 6rem;
            display: flex;
            align-items: center;
            justify-content: center;
