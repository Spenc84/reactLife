// $shadow = 0 .1rem 1rem #515151
$shadow = 0 2px 2px 0 rgba(0, 0, 0, 0.1), 0 3px 1px -2px rgba(0, 0, 0, 0.1), 0 1px 5px 1px rgba(0, 0, 0, 0.09)
$lightBackground = rgb(245,245,245)

div.Modal
    z-index: 100;
    position: fixed;
    top: 0;
    left: 0;
    height: 100vh;
    width: 100vw;
    background: rgba(0,0,0,.5);
    padding-top: 15%;
    justify-content: center;
    font-family 'Roboto Regular', 'Roboto', sans-serif

    div.inner
        flex-direction: column;

        & > header
            position relative
            align-items: center;
            height: 6rem;
            color: white;
            font-size 2.4rem
            border-top-left-radius .3rem
            border-top-right-radius .3rem
            box-shadow: $shadow;

        & > footer
            justify-content flex-end
            background $lightBackground
            border-bottom-left-radius .3rem
            border-bottom-right-radius .3rem
            box-shadow: $shadow;
