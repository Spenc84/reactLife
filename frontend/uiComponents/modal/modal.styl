@require '../../index'

div.Modal
    z-index: 100;
    position: fixed;
    top: 0;
    left: 0;
    height: 100vh;
    width: 100vw;
    justify-content: center;
    align-items center
    background: rgba(0,0,0,.66);
    font-family 'Roboto Regular', 'Roboto', sans-serif

    div.inner
        max-height 100vh
        max-width 100vw
        flex-direction column
        box-shadow $deepShadow
        border-radius .5rem
        overflow hidden

        & > header
            position relative
            align-items: center;
            height: 6rem;
            color: white;
            font-size 2.2rem

        & > footer
            flex 0 0 5rem
            align-items center
            justify-content flex-end
            background $primaryBG
            padding 0 .8rem
