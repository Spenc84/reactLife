        //     color $inactive
        //     padding .8rem
        //     flex 1
        //     span
        //         -webkit-user-select none
        //         justify-content center
        //         padding .4rem .8rem
        //         &.included
        //             text-shadow 0 .3rem .6rem #048
        //         &.excluded, &.excluded-active
        //             text-shadow 0 .3rem .6rem #f00
        //         &.required-active
        //             text-shadow 0 .3rem .6rem #999
        //         &.required, &.required-active, &.excluded-active
        //             color black
        //     input
        //         margin .8rem
        //         flex 1
        // div.gradient.spacer
        //     z-index 5
        //     position absolute
        //     top 100%
        //     width 100%
        //     padding .4rem
        //     background linear-gradient(to bottom, white 0%, white 50%, transparent 100%)


    .List-Body
        flex 1
        flex-direction column
        overflow-y auto
        background $primaryBG

        div.task.row
            flex 0 0 4.8rem
            height 4.8rem
            padding-right .5rem
            & > div.column
                align-items center
                justify-content center
            div.checkbox.column
                position relative
                width 4.8rem
                cursor pointer
                svg
                    stroke _faded(.53)
                    stroke-width .15rem
                    line
                        stroke white
                        stroke-width 2
                span.projectSize
                    position absolute
                    top 0
                    bottom 0
                    left 0
                    right 0
                    align-items center
                    justify-content center
                    font-size 1rem
                    color white
                    font-stretch condensed
                    font-family sans-serif

            div.svg.column
                width 4.8rem
                cursor pointer
                line
                    stroke-width .15rem
                    stroke rgb(100,100,100)
            div.title.column
                align-items flex-start
                flex-grow 1
                padding .8rem
                span
                    cursor pointer
                input
                    flex-grow 1
                    font-size 1.6rem
                    font-family initial
                    border none
            div.Icon
                color _faded(.53)
                padding-right .5rem
                &.star
                    color $star


/////////////////////////   ANIMATIONS / TRANSITIONS   /////////////////////////
#dropNav
    margin-top -0.8rem
    &.dropNav-enter
        margin-top -3.2rem
        opacity 0
        transition margin-top 200ms ease-in-out, opacity 150ms 50ms ease-in-out
        &&-active
            margin-top -0.8rem
            opacity 1

    &.dropNav-leave
        margin-top -0.8rem
        opacity 1
        &&-active
            margin-top -3.2rem
            opacity 0
            transition margin-top 200ms ease-in-out, opacity 100ms ease-in-out
